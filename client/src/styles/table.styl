@import 'const.styl'

.btn-nav
  border: 1px solid highColor
  border-radius: 4px
  background-color: transparent
  color: highColor
  cursor: pointer
  &:hover
    color: white
    background-color: highColor

#name-user
  color: highColor
  position: absolute;
  left: 46%
  text-transform: capitalize
  font-size: 22px
  font-weight: bold

.container-btn-nav
  position: absolute
  right: 25px

.container-table
  background-color: backgroundColor
  height: 100vh
  padding-top: 30px

.container-icons
  display: flex
  justify-content: center

.icon
  margin-right: 20px
  cursor: pointer
  &:hover
    color: highColor

.modal-header
  background-color: highColor
  color: white

.btn-modal
  background-color: highColor
  &:hover
    color: white

.btn-exit
  background-color: warningColor
  &:hover
    color: white

.modal-error
  background-color: warningColor

.message-error
  color: warningColor
  display: none

.item-warning
  font-size: 12px
  padding: 5px 15px
  background-color: #EDD400FF

.title-list-warning
  background-color: #C4A000FF

.item-danger
  font-size: 12px
  padding: 5px 15px
  background-color: warningColor

.title-list-danger
  background-color: #A40000FF

.circle
  font-size: 10px
  margin-right: 5px
